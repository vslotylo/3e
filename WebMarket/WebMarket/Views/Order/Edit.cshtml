@model WebMarket.DAL.Entities.Order
@using WebMarket.DAL.Entities.Enums
@using WebMarket.Extensions;

@{
    ViewBag.Title = "Редагувати замовлення";
}

<span class="lead">@ViewBag.Title</span>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Status, typeof(OrderStatus))
        @Html.ValidationMessageFor(model => model.Status)
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
}