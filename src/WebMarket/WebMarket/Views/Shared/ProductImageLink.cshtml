@model WebMarket.DAL.Entities.Product

<a href=@Url.Action("details", Model.Controller, new { id = Model.Id }) >
    <table>
        <tr>
            <td>
                <img width="280" height="280" src="@string.Format("/Content/tiles/{0}", @Model.GetListPhoto())" onerror="this.src='/Content/tiles/noimage.png'" alt="@Model.Name" title="@Model.Name"/>
            </td>
        </tr>
    </table>
</a>

