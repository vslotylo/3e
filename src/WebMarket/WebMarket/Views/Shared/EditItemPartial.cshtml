@model WebMarket.Models.EditItemModel

@using WebMarket.Security
@if (User.IsAdministrator())
{
    <div aria-hidden="true" aria-labelledby="headerText" role="dialog" tabindex="-1" class="modal fade" id="confirmItemDeleteDialog" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                    <h3 id="headerText">Видалення запису</h3>
                </div>
                <div class="modal-body">
                    <form class="form-inline">
                        <p class="text-info">Ви дійсно бажаєте цей запис?</p>
                    </form>
                </div>
                <div class="modal-footer">
                    <span>
                        <button id="btnCancel" class="btn btn-default btn-primary">Відмінити</button>
                        <button id="btnDeleteProduct" class="btn btn-default btn-danger">Видалити</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-default btn-warning btn-sm" href="@Model.EditUrl">Редагувати</a>
    <a id="removeItem" data-targeturl="@Model.DeleteUrl" class="btn btn-default btn-danger btn-sm" href="#confirmItemDeleteDialog" data-toggle="modal">Видалити</a>
}
