@model WebMarket.Core.PagingViewModel

<ul class="pagination">
    @if (Model.List.HasPreviousPage)
    {
        <li><a href="@Url.RouteUrl("categoryBase", Model.Routes[0])">&larr;</a></li>
    }
    else
    {
        <li class="disabled"><a href="@Url.RouteUrl("categoryBase", Model.Routes[0])">&larr;</a></li>
    }
    @for (var i = 1; i < Model.List.PageNumber; i++)
    {
        <li>
            <a href="@Url.RouteUrl("categoryBase", Model.Routes[i])">@i</a>
        </li>
    }
    <li class="active">
        <a href="@Url.RouteUrl("categoryBase", Model.Routes[Model.List.PageNumber])">@Model.List.PageNumber</a>
    </li>
    @for (var i = Model.List.PageNumber + 1; i <= Model.List.PageCount; i++)
    {
        <li>
            <a href="@Url.RouteUrl("categoryBase", Model.Routes[i])">@i</a>
        </li>
    }
    @if (Model.List.HasNextPage)
    {
        <li><a href="@Url.RouteUrl("categoryBase", Model.Routes[Model.List.PageNumber + 1])">&rarr;</a></li>
    }
    else
    {
        <li class="disabled"><a href="@Url.RouteUrl("categoryBase", Model.Routes[Model.List.PageCount])">&rarr;</a></li>
    }
</ul>

