        <div class="container">
            @if (ViewBag.ShowHeader == null || ViewBag.ShowHeader == true)
            {
                <header>
                    @Html.Partial("Header")
                </header>
            }
            <section>
                <div class="maincontentregion">
                    <div>
                        @if (ViewBag.ShowBreadCrumb == null || ViewBag.ShowBreadCrumb == true)
                        {
                            <ul class="breadcrumb">
                                <li><a href="@Url.Action("index", "home")">Головна</a></li>
                                @RenderSection("breadCrumb", required: false)
                            </ul>
                        }
                        @RenderSection("featured", required: false)
                        <section>
                            @RenderBody()
                        </section>
                    </div>
                </div>
            </section>
            @if (ViewBag.ShowFooter == null || ViewBag.ShowFooter == true)
            {
                <footer>
                    @Html.Partial("Footer")
                </footer>
            }
        </div>

