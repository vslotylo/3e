@model WebMarket.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    ViewBag.ShowBreadCrumb = false;
    ViewBag.ShowHeader = false;
    ViewBag.ShowFooter = false;
}

<div class="form-prm">
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Registration Form</legend>

            <div>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level" })
            </div>
            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "input-block-level" })
            </div>
            <div>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-block-level" })
            </div>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <button type="submit" class="btn btn-large btn-block btn-primary">Register</button>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
