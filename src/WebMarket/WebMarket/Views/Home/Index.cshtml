                    @Html.RouteLink("Luxeon", "categoryBase", new { category = "avr", producers = "luxeon" })
                    @Html.RouteLink("Вольт", "categoryBase", new { category = "avr", producers = "вольт" })
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="img-thumbnail">
            <a class="img-thumbnail thumbnail-inner" href="@Url.RouteUrl("categoryBase", new { category = "ups" })">
                <img src="~/Content/images/tile2.jpg" /></a>
            <div class="caption">
                <p><strong class="text-success">Джерела Безперебійного Живлення</strong> - забезпечать Ваш дім електроенергією у період її відсутності. Є незамінними помічниками приладів для яких наявність постійного живлення є обов'язковою.</p>
                <p>
                    <span class="tileheader">Виробники: </span>
                    @Html.RouteLink("Luxeon", "categoryBase", new { category = "ups", producers = "luxeon" })
                    @Html.RouteLink("Volter", "categoryBase", new { category = "ups", producers = "volter" })
                    @Html.RouteLink("Вольт", "categoryBase", new { category = "ups", producers = "вольт" })
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="img-thumbnail">
            <a class="img-thumbnail thumbnail-inner" href="@Url.RouteUrl("categoryBase", new { category = "battery" })">
                <img src="~/Content/images/tile3.jpg" /></a>
            <div class="caption">
                <p><strong class="text-success">Акумулятори</strong> - дозволять накопичувати електроенергію для майбутнього використання. Є невідмємною частиною альтернативних джерел живлення.</p>
                <p>
                    <span class="tileheader">Виробники: </span>
                    @Html.RouteLink("Luxeon", "categoryBase", new { category = "battery", producers = "luxeon" })
                    @Html.RouteLink("Ventura", "categoryBase", new { category = "battery", producers = "ventura" })
                    @Html.RouteLink("B.B. Battery", "categoryBase", new { category = "battery", producers = "b.b. battery" })
                    @Html.RouteLink("Vimar", "categoryBase", new { category = "battery", producers = "vimar" })
                </p>
            </div>
        </div>
    </div>
</div>
