@section scripts
{
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&language=ua"></script>
    <script>
        var map;
        var marker;
        var myLocationMarker;
        google.maps.visualRefresh = true;

        $('#getDirection').on('click', function () {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var pos = new google.maps.LatLng(position.coords.latitude,
                        position.coords.longitude);
                    myLocationMarker = new google.maps.Marker({
                        position: pos,
                        map: map,
                        draggable: false,
                        animation: google.maps.Animation.DROP,
                        title: 'Ви знаходитесь тут!'
                    });

                    var bounds = new google.maps.LatLngBounds(marker.getPosition());
                    bounds.extend(myLocationMarker.getPosition());
                    map.fitBounds(bounds);

                    var geodesicOptions = {
                        strokeColor: '#00bfff',
                        strokeOpacity: 0.75,
                        strokeWeight: 5,
                        geodesic: true,
                        map: map
                    };
                    var geodesicPoly = new google.maps.Polyline(geodesicOptions);
                    var path = [marker.getPosition(), myLocationMarker.getPosition()];
                    geodesicPoly.setPath(path);


                }, function () {
                    handleNoGeolocation(true);
                });
            } else {
                handleNoGeolocation(false);
            }

            function handleNoGeolocation(errorFlag) {
                var content;
                if (errorFlag) {
                    content = 'Зараз ми не можемо показати на карті як до нас заїхати.';
                } else {
                    content = 'Ваш браузер не підтримує дану функцію.';
                }

                alert(content);
            }
        });
        $(document).ready(function () {
            var lat = 49.862567;
            var lng = 24.051631;
            var loc = new google.maps.LatLng(lat, lng);
            var mapOptions = {
                zoom: 15,
                center: new google.maps.LatLng(lat, lng),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById('map_canvas'),
                mapOptions);

            var contentString = '<div id="content">' +
                '<div id="siteNotice">' +
                '</div>' +
                '<h1 id="firstHeading" class="firstHeading">3e.lviv.ua</h1>' +
                '<div id="bodyContent">' +
                '<h2>3e.lviv.ua - Інтернет магазин електро товарів.</h2>' +
                '<img src="/Content/images/logo.png"/>' +
                '<p>Завтіайте на наш <a href="/home">Веб сайт</a></p>' +
                '</div>' +
                '</div>';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            marker = new google.maps.Marker({
                position: loc,
                map: map,
                draggable: false,
                animation: google.maps.Animation.BOUNCE,
                title: 'www.3e.lviv.ua'
            });
            google.maps.event.addListener(marker, 'click', function () {
                infowindow.open(map, marker);
            });

            google.maps.event.addListener(marker, 'mouseover', removeanimation);
            google.maps.event.addListener(marker, 'mouseout', addanimation);

            function addanimation() {
                marker.setAnimation(google.maps.Animation.BOUNCE);
            }

            function removeanimation() {
                if (marker.getAnimation() != null) {
                    marker.setAnimation(null);
                }
            }
        });

        $('#getCallback').on('click', function (e) {
            var phone = $('#mobilePhone').val();
            $.post("/home/callback", { phone: phone })
            .done(function (e) {
        $('#callbackDialog').modal('hide');
    });

        });
    </script>
}
